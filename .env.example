# AI OS Environment Variables
# Copy this file to .env and fill in your actual values

# =====================================
# AI API Keys (REQUIRED for ScreenAgent)
# =====================================
# OpenAI API Key for GPT-4 Vision and GPT-5 models
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key for Claude models (optional alternative)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# =====================================
# ScreenAgent Configuration
# =====================================
# Model to use for vision and planning
# Recommended: gpt-4o-mini (OpenAI's latest cost-efficient multimodal model)
# Other options: gpt-4.1, gpt-4o, claude-3-opus, claude-3-sonnet
SCREEN_AGENT_MODEL=gpt-4o-mini

# Logging level for ScreenAgent
# Options: DEBUG, INFO, WARNING, ERROR
SCREEN_AGENT_LOG_LEVEL=INFO

# =====================================
# Container Configuration
# =====================================
# Port for Xpra HTML5 server (default: 10005)
PORT=10005

# X11 Display (default: :100)
DISPLAY=:100

# User ID for workspace isolation (auto-generated if not set)
USER_ID=

# =====================================
# Kubernetes Configuration (for production)
# =====================================
# AWS EKS cluster name
EKS_CLUSTER_NAME=aios-production

# AWS region
AWS_REGION=us-east-1

# Container registry URL
CONTAINER_REGISTRY=your-registry.ecr.us-east-1.amazonaws.com

# Image tag
IMAGE_TAG=latest

# =====================================
# Development Settings
# =====================================
# Enable debug mode (more verbose logging)
DEBUG=false

# Hot reload for development
HOT_RELOAD=false
