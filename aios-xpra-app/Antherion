\draw[arrow] (check2.east) -- node[above, font=\footnotesize]{No} (revise);
\draw[arrow] (check3.east) -- node[above, font=\footnotesize]{No} ++(17mm,0) |- (revise);
\draw[arrow] (revise.north) |- (reason.east);

\end{tikzpicture}
